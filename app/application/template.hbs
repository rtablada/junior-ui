<body class="site">
  <nav class="nav">
    <div class="column is-11">
      <div class="nav__inner">
        <div class="nav__content">
          <i {{action "toggleNav"}} class="fa fa-bars mt" aria-hidden="true"></i>
          {{#link-to "app.forum"}}<img src="/images/nav/logo.svg" class="nav__logo" alt="Junior Logo" />{{/link-to}}
          {{input class="search desktop" type="text" name="name" placeholder="Search"}}
          <div class="">
          {{#link-to "app.forum.new-post"}}<img src="/images/nav/add.svg" class="user__img"/>{{/link-to}}
          {{#link-to "app.profile"}}<img src="/images/forum/J.png" class="user__img"/>{{/link-to}}
          </div>
          {{#if (and session.currentUser (not session.currentUser.profile.profileCompleted))}}
          {{/if}}
        </div>
      </div>
    </div>
  </nav>
  <nav class="sub__nav sub__nav--off">
    <div class="column is-11">
      <div class="sub__nav--inner">
        <ul class="sub__nav--content">
          <div class="sub__nav--content--inner">
          {{#link-to "app.forum" class="sub__nav--item"}}Forum{{/link-to}}
          {{#link-to "app.resources" class="sub__nav--item"}}Resources{{/link-to}}
          {{#link-to "app.jobs" class="sub__nav--item"}}Jobs{{/link-to}}
          {{#link-to "interviews" class="sub__nav--item"}}Interviews{{/link-to}}
          {{#link-to "app.forum" class="sub__nav--item"}}Likes{{/link-to}}
          {{#link-to "app.profile" class="sub__nav--item"}}My Profile{{/link-to}}
        </div>
        </ul>
      </div>
    </div>
  </nav>
  <main class="site__content">
    <div class="column is-11">
      <div class="flash-messages">
        {{#each flashMessages.queue as |flash|}}
          {{#flash-message flash=flash class="success-message flash-success" as |message|}}
            <div class="chip">
              {{flash.message}}
            </div>
          {{/flash-message}}
        {{/each}}
      </div>
      {{outlet}}
    </div>
  </main>
  <footer class="footer">
    <div class="column is-11">
      <div class="footer__inner">
        <ul class="footer__content">
          <li class="footer__item">Â© 2016</li>
        </ul>
      </div>
    </div>
  </footer>
</body>
