  {{#if (and session.currentUser (not session.currentUser.profile.profileCompleted))}}
    <nav class="nav">
      <div class="column is-9">
        <div class="nav__inner">
          <div class="nav__content">
            <div class="logo__box">
              {{#link-to "app.forum"}}<img src="/images/nav/logo.svg" class="nav__logo" alt="Junior Logo" />{{/link-to}}
            </div>
            <div class="right__box">
              {{#simple-form onsubmit=(action "search") class="search--form" as |search|}}
                {{input class="search" type="text" value=search.query placeholder="Search the feed, comments, users..."}}
                <button class="search--btn"></button>
              {{/simple-form}}
              <div class="right-nav">
                {{#basic-dropdown class="sub__nav sub__nav--off nav-btn" as |dropdown|}}
                  {{#dropdown.trigger}}<img src="/images/nav/add.svg" class="nav-btn" {{action "toggleNav"}} />{{/dropdown.trigger}}
                  {{#dropdown.content}}
                    {{#link-to "app.forum.new-post" class="flex--item-1" }}Add A New Question{{/link-to}}
                  {{/dropdown.content}}
                  {{#dropdown.content}}
                    {{#link-to "app.resources.new-resource" class="flex--item-2" }}Add A New Resource{{/link-to}}
                  {{/dropdown.content}}
                  {{#dropdown.content}}
                    {{#link-to "app.jobs.new-job" class="flex--item-3" }}Add A New Job{{/link-to}}
                  {{/dropdown.content}}
                {{/basic-dropdown}}
              </div>
            </div>
          </div>
        </div>
      </div>
  </nav>
  {{/if}}


