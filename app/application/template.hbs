<body class="site">
  {{#if session.currentUser}}
    <nav class="nav">
      <div class="column is-8">
        <div class="nav__inner">
          <div class="nav__content">
            <div class="logo__box">
              {{#link-to "app.forum"}}<img src="/images/nav/logo.svg" class="nav__logo" alt="Junior Logo" />{{/link-to}}
            </div>
            <div class="right__box">
              {{#simple-form onsubmit=(action "search") class="search--form" as |search|}}
                {{input class="search" type="text" value=search.query placeholder="Search the feed, comments, users..."}}
                <button class="search--btn"><svg xmlns="http://www.w3.org/2000/svg" class="search--icon" width="21" height="21" viewBox="0 0 24 24"><path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/></svg></button>
              {{/simple-form}}
              <div class="right-nav">
                <svg xmlns="http://www.w3.org/2000/svg" class="menu-btn" {{action "toggleNav"}} width="35" height="35" viewBox="0 0 24 24"><path d="M12 8c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm0 2c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z"/></svg>
                <img src="/images/nav/add.svg" class="nav-btn" {{action "toggleAdd"}} />
                {{#link-to 'app.profile.user-view' session.currentUser}}{{user-icon user=session.currentUser}}{{/link-to}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>
  {{/if}}
  <nav class="sub__nav sub__nav--off">
    <div class="column is-8">
      <div class="sub__nav--inner">
        <ul class="sub__nav--content">
          <div class="sub__nav--content--inner">
            {{#link-to "app.forum" class="sub__nav--item" }}Feed{{/link-to}}
            {{#link-to "app.resources" class="sub__nav--item" }}Resources{{/link-to}}
            {{#link-to "app.jobs" class="sub__nav--item" }}Jobs{{/link-to}}
            {{#link-to "interviews" class="sub__nav--item" }}Interviews{{/link-to}}
            {{#link-to "app.forum" class="sub__nav--item" }}Likes{{/link-to}}
            {{#link-to "app.profile" class="sub__nav--item" }}My Profile{{/link-to}}
            {{#link-to "logout" class="sub__nav--item" }}Logout{{/link-to}}
          </div>
        </ul>
      </div>
    </div>
  </nav>
  <nav class="add__nav add__nav--off">
    <div class="column is-8">
      <div class="sub__nav--inner">
        <ul class="sub__nav--content">
          <div class="sub__nav--content--inner">
            {{#link-to "app.forum.new-post" class="sub__nav--item" }}Add New Question{{/link-to}}
            {{#link-to "app.resources.new-resource" class="sub__nav--item" }}Add New Resource{{/link-to}}
            {{#link-to "app.jobs.new-job" class="sub__nav--item" }}Add New Job{{/link-to}}
          </div>
        </ul>
      </div>
    </div>
  </nav>
  <main class="site__content">
    <div class="column is-8">
      <div class="flash-messages column is-8">
        {{#each flashMessages.queue as |flash|}}
          {{#flash-message flash=flash class="success-message flash-success" as |message|}}
            <div class="chip">
              {{flash.message}}
            </div>
          {{/flash-message}}
        {{/each}}
      </div>
      {{outlet}}
    </div>
  </main>
  <footer class="footer">
    <div class="column is-8">
      <div class="footer__inner">
        <ul class="footer__content">
          <li class="footer__item">Â© 2016</li>
        </ul>
      </div>
    </div>
  </footer>
</body>
