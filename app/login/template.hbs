{{outlet}}
<div class="login">
  <div class="login__inner">
    {{#simple-form onsubmit=(action "login") as |inputs|}}
    <div class="login__container">
      {{input class="global__input" type="text" name="name" value=inputs.email placeholder="Username or Email"}}
      {{input class="global__input" type="password" name="name" value=inputs.password placeholder="Password"}}
    </div>
    <div class="button__container">
      <button class="cancel-btn" type="button" name="button">Create New Account</button>
      <button class="submit-btn" type="submit" name="button">Sign In</button>
    </div>
    {{/simple-form}}
  </div>
</div>
