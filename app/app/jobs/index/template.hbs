<div class="index__container">
  <h1 class="forum__post--title index__header">Today's Top Jobs</h1>
  {{#link-to 'app.forum.new-post' class="cancel-btn mobile__hide" }}New Job{{/link-to}}
  {{#link-to 'app.forum.new-post' class="fa fa-plus-circle index__circle mobile__only" }}{{/link-to}}
</div>

{{!-- {{#each model as |post|}} --}}
  <div class="index__post">
    <div class="index__post--inner">
      <div class="index__post--wrapper">
        <div class="user">
          <div class="img__box">
            <img src="/images/forum/C.png" alt="" class="user__img">
          </div>
          <div class="username__box">
            <p class="username">Peter Court</p>
            <p class="date mt">Posted August 25</p>
          </div>
        </div>
        <div class="post__box">
          {{#link-to 'app.forum.thread' post class="post__title" }}Etsy{{/link-to}}
        </div>

        <div class="second__line">
          <div class="comment__box">
            <p class="comment">5 Comments</p>
          </div>
          <div class="icon__box">
            <i class="fa fa-heart heart" aria-hidden="true"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
{{!-- {{/each}} --}}
