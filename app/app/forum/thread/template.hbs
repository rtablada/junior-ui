<div class="forum__main--top index__container">
  <h1 class="forum__post--title index__header">{{model.jsonData.title}}</h1>
</div>

<div class="forum__post index__post">
  <div class="forum__post--inner index__post--inner">
    <div class="forum__post--group index__post--wrapper">
      <div class="forum__post--left user">
        <div class="forum__post--img--box img__box">
          <img src="/images/forum/C.png" alt="" class="forum__post--img user__img">
        </div>
        <div class="forum__post--user username__box">
          <p class="forum__post--name username">{{model.user.firstName}} {{model.user.lastName}}</p>
          <p class="forum__post--name date mt">Posted August 25</p>
        </div>
      </div>
      <div class="forum__post--middle post__box">
        {{#link-to 'app.forum.thread' 1 class="forum__post--question post__title" }}{{model.jsonData.title}}{{/link-to}}
      </div>
      <div class="second__line">
        <div class="forum__post--right comment__box">
          <p class="forum__post--comment comment">Posted August 25</p>
        </div>
        <div class="forum__post--heart icon__box">
          <i class="fa fa-heart heart" aria-hidden="true"></i>
        </div>
      </div>
    </div>

    <div class="forum__post--description">
      <div class="forum__post--description--copy content">
        {{md-text text=model.jsonData.description}}
      </div>
    </div>

    <button {{action "deletePost" model}} class="submit-btn" type="submit" name="button">Delete Post</button>

    {{#simple-form onsubmit=(action "addComment" model) as |inputs| }}
      <div class="forum__post">
        <div class="">
          {{textarea class="global__textarea" type="text" name="name" value=inputs.markdown placeholder="Add a comment"}}
        </div>
        <div class="">
          <button class="submit-btn" type="submit" name="button">Post Comment</button>
        </div>
      </div>
    {{/simple-form}}
  </div>
</div>

{{#each model.comments as |comment|}}
  <div class="forum__post index__post">
    <div class="forum__post--inner index__post--inner">
      <div class="forum__post--group index__post--wrapper">
        <div class="forum__post--left user">
          <div class="forum__post--img--box img__box">
            <img src="/images/forum/J.png" alt="" class="forum__post--img user__img">
          </div>
          <div class="forum__post--user username__box">
            <p class="forum__post--name username">{{comment.user.firstName}} {{comment.user.lastName}}</p>
          </div>
        </div>
        <div class="forum__post--middle post__box">
          <h1 class="post__title">{{comment.user.email}}</h1>
        </div>
        <div class="second__line">
          <div class="forum__post--right comment__box">
            <p class="forum__post--comment comment">Posted August 25</p>
          </div>
          <div class="forum__post--heart icon__box">
            <i class="fa fa-heart heart" aria-hidden="true"></i>
          </div>
        </div>
      </div>
      <div class="forum__post--description">
        <div class="forum__post--description--copy content">
          {{#link-to 'app.forum.thread' 1 class="forum__post--question" }}{{md-text text=comment.markdown}}{{/link-to}}
        </div>
      </div>
      {{!-- {{#if (and session.currentUser (not session.currentUser.profile.profileCompleted))}} --}}
          <button {{action "deleteComment" comment}} class="submit-btn" type="submit" name="button">Delete Comment</button>
      {{!-- {{/if}} --}}
    </div>
  </div>
{{/each}}
