{{outlet}}
<div class="profile">
  <div class="profile__inner">
    {{#simple-form startingValues=model onsubmit=(action "addNewPost") class="profile__card" as |inputs|}}
      <div class="profile__container--input">
        <div class="profile-input">
          <p class="profile-label">Question (140 character limit)</p>
          {{input class="global__input" type="text" name="name" maxlength="140" value=inputs.title placeholder="Post Title"}}
        </div>

        <div class="profile-input">
          <p class="profile-label">Question Description</p>
          {{textarea class="global__textarea" type="text" name="name" value=inputs.description placeholder="Post Description"}}
        </div>

        <div class="profile-input">
          <p class="profile-label">Tags (Use comma between tags)</p>
          {{input class="global__input" type="text" name="name" value=inputs.tagsString placeholder="Design, Resource, Startup etc."}}
        </div>
        <div class="box__2 post__btn">
          <button class="user-btn" type="submit" name="button">Post</button>
        </div>
      </div>
    {{/simple-form}}
  </div>
</div>
