{{outlet}}
<div class="profile">
  <div class="profile__inner">
    {{#simple-form startingValues=model.profile onsubmit=(action "updateProfile" model) class="profile__card profile__big" as |inputs|}}
      <div class="profile__container--input">
        <div class="box__1">
          <h1 class="global__h2 profile__title">Tell us more about yourself</h1>
        </div>

        <div class="profile-input">
          {{input class="global__input" type="text" name="name" value=inputs.profilePicture placeholder="Describe yourself in 140 characters"}}
        </div>

        <div class="profile-input">
          {{input class="global__input" type="text" name="name" value=inputs.jobStatus placeholder="Describe your current employment situation"}}
        </div>

        <div class="profile-input">
          {{textarea class="global__textarea" type="text" name="name" value=inputs.experience placeholder="What are you currently learning?"}}
        </div>

        <div class="profile-input">
          {{textarea class="global__textarea" type="text" name="name" value=inputs.educationalBackground placeholder="Tell us about your educational background"}}
        </div>

        <div class="box-2">
          <button class="submit-btn login-btn" type="submit" name="button">Submit</button>
        </div>
      </div>
    {{/simple-form}}

